rails_env = 'production'
environment "production"

threads 4,4
bind  "unix://<%= shared_path %>/tmp/puma/<%= application %>-puma.sock"
pidfile "<%= shared_path %>/tmp/puma/pid"
state_path "<%= shared_path %>/tmp/puma/state"

daemonize true
activate_control_app